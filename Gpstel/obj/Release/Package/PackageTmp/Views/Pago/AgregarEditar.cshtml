@model Gpstel.Models.Pago
@{
    //ViewBag.Title = "AgregarEditar";
    //ViewBag.Title = (Model. > 0 ? Model.nombre : "Nuevo Registro");
    //var iddepago = ViewBag.iddepago;
}

<h2>Editar</h2>
<ol class="breadcrumb">
    <li><a href="~/Pago">Modificar Pago</a></li>
    <li class="active">@(Model.idpago > 0 ? Model.Vehiculo.placa : "Nuevo Registro")</li>
</ol>
@using (Html.BeginForm("Guardar", "Pago", FormMethod.Post, new { id = "frm-tipoevento" }))
{
    /*@class= "form-control",disabled = true*/
    @Html.HiddenFor(x => x.idpago)
    @Html.HiddenFor(X=>X.idvehiculo)
    <div class="panel panel-default">
        <div class="panel-heading">Informacion del Pago</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.idpago, new { @class = "form-control", disabled = true })
            </div>

            <div class="form-group">
                @Html.Label("Fecha Pago")
                @Html.TextBoxFor(x => x.fecha_pago, new { @class = "form-control", @required = true, disabled=true })
                @*@Html.ValidationMessageFor(/*para validar el campo nombre*/x => x.nombre, null, new { @class = "label label-danger" })*@
            </div>

            <div class="form-group">
                @Html.Label("Concepto")
                @Html.TextAreaFor(x => x.concepto, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.estado, "Estado")
                <select name="estado" class="form-control">
                    <option @(Model.estado == "" ? "selected" : "") value="">--Seleccione</option>
                    <option @(Model.estado == "A" ? "selected" : "") value="A">Activo</option>
                    <option @(Model.estado == "I" ? "selected" : "") value="I">Inactivo</option>
                </select>
                @Html.ValidationMessageFor(/*para validar el campo nombre*/x => x.estado, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x=>x.monto,"Monto")
                @Html.TextBoxFor(x=>x.monto, new {@class="form-control" })
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Pago/Ver/@Model.idvehiculo" class="btn btn-danger">Cancelar</a>
    </div>
}

@{
    Layout = null;
}
@model Gpstel.ViewModels.UsuarioViewModel


<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login Form </title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                   

                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @ViewBag.Error
                        <h1>Acceso</h1>
                        @*<table cellpadding="2" cellspacing="2">*@
                            <div>
                                @*<td>@Html.LabelFor(model => model.Usuario.nombre)</td>*@
                               @Html.TextBoxFor(model => model.Usuario.nombre, new { @class = "form-control",placeholder="Usuario", @required = true })
                            </div>
                            <div>
                                @*<td>@Html.LabelFor(model => model.Usuario.password)</td>*@
                                @Html.TextBoxFor(model => model.Usuario.password, new { @class = "form-control password",type="password",placeholder="Password", @required=true} )
                            </div>
                            
                                <div>&nbsp;</div>
                                <div><input type="submit" value="Acceder" class="btn btn-default submit" /></div>
                                @*<div class="clearfix"></div>*@

                                <div class="separator">                                 

                                    <div class="clearfix"></div>
                                    <br />

                                    <div>
                                        <h1><i class="fa fa-map-marker"></i> GPSTEL</h1>
                                        <p>©@DateTime.Now.Year - GPSTEL del Sur</p>
                                    </div>
                                </div>
                        @*</table>*@
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>